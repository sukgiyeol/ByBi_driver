<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bybi_driver.MatchingActivity">
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        class="com.google.android.gms.maps.MapFragment" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="부산대 정문 >>> 부산대 상학관"
        android:textSize="20dp"
        android:id="@+id/textView1"
        android:layout_alignParentBottom="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="박유진 : 010-1234-1234"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/drive_start"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#3d50ff"
        fancy:fb_focusColor="#8291ff"
        fancy:fb_fontIconResource="&#xf095;"
        fancy:fb_iconPosition="left"
        fancy:fb_text="  전화 연결"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="22dp"/>
    <TextView
        android:id="@+id/start_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="출발지"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/end_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="목적지"
        android:textSize="16sp"/>

</LinearLayout>
